{
  "Logging": {
    "File": {
      "IncludeScopes": true,
      "BasePath": "Logs",
      "LogLevel": {
        "Default": "Warning"
      },
      "Files": [
        { "Path": "warn+err.log" }
      ]
    },
    "InfoFile": {
      "IncludeScopes": true,
      "BasePath": "Logs",
      "LogLevel": {
        "Default": "Information"
      },
      "Files": [
        { "Path": "info.log" }
      ]
    },
    "Console": {
      "IncludeScopes": true
    },
    "LogLevel": {
      "Default": "Debug",
      "SplitByLogLevel": "Trace"
    }
  }
}
